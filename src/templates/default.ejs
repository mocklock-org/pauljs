<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= meta.description %>">
  <title><%= meta.title %></title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      line-height: 1.6;
      color: #212529;
    }
    img {
      max-width: 100%;
      height: auto;
    }
  </style>
  <%- styles %>
  <% if (config.tailwind) { %><script src="https://cdn.tailwindcss.com"></script><% } %>
</head>
<body>
  <div id="root">
    <% sections.forEach(function(section) { %>
      <% if (section.layout && section.layout.container) { %>
        <div class="<%= section.layout.container %><%= section.layout.className ? ' ' + section.layout.className : '' %>">
          <%- section.component %>
        </div>
      <% } else { %>
        <%- section.component %>
      <% } %>
    <% }); %>
  </div>
  <%- scripts %>
</body>
</html> 